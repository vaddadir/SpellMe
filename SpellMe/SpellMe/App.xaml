<Application x:Class="SpellMe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SpellMe.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <vm:ViewModelLocator x:Key="ViewModelLocator"></vm:ViewModelLocator>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5 5"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Width" Value="120"></Setter>
        </Style>
        <Style x:Key="UseItInASentence" TargetType="Button">
            <Setter Property="Margin" Value="5 5"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Width" Value="200"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5 5"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Width" Value="330"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
        </Style>
    </Application.Resources>
    
</Application>
